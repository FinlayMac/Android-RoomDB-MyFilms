<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/design_default_color_primary_dark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RatingStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpacerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="SmallButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@color/design_default_color_primary</item>
    </style>

</resources>